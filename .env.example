# Environment Variables for LogiFlow Production

# Database Configuration
DATABASE_URL=postgresql://logiflow_user:secure_password_123@postgres:5432/logiflow

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# Application Configuration
NODE_ENV=production
PORT=5000

# Authentication Configuration
USE_LOCAL_AUTH=true

# Database Password (for Docker Compose)
POSTGRES_PASSWORD=secure_password_123

# Security Note:
# In production, make sure to:
# 1. Change POSTGRES_PASSWORD to a strong, unique password
# 2. Change SESSION_SECRET to a strong, unique secret key
# 3. Use proper SSL certificates for HTTPS
# 4. Configure proper firewall rules